<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/time_gap"
        app:layout_constraintEnd_toStartOf="@+id/tripTitle0"
        app:layout_constraintStart_toEndOf="@+id/textView19"
        app:layout_constraintTop_toTopOf="@+id/textView19" />

    <TextView
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingHorizontal="8dp"
        android:text="9h"
        android:textColor="#33535F"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineHeight="18sp"
        android:text="Vehicle No.: MH20GS3140"
        android:textAppearance="@style/travel_tick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Web, 19 Feb"
        android:textAppearance="@style/train_fligh"
        app:layout_constraintStart_toStartOf="@+id/textView15"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <TextView
        android:id="@+id/tripTitle0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Web, 19 Feb"
        android:textAppearance="@style/train_fligh"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView19" />

    <TextView
        android:id="@+id/tripTitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13:30"
        android:textAppearance="@style/travel_tick"
        app:layout_constraintStart_toStartOf="@+id/textView19"
        app:layout_constraintTop_toBottomOf="@+id/textView19" />


    <TextView
        android:id="@+id/tripTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22:30"
        android:textAppearance="@style/travel_tick"
        app:layout_constraintEnd_toEndOf="@+id/tripTitle0"
        app:layout_constraintTop_toTopOf="@+id/tripTitle1" />

    <TextView
        android:id="@+id/source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aurangabad"
        android:textAppearance="@style/train_fligh"
        app:layout_constraintStart_toStartOf="@+id/tripTitle1"
        app:layout_constraintTop_toBottomOf="@+id/tripTitle1" />

    <TextView
        android:id="@+id/destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hyderabad Jn"
        android:textAppearance="@style/train_fligh"
        app:layout_constraintEnd_toEndOf="@+id/tripTitle2"
        app:layout_constraintTop_toTopOf="@+id/source" />


</androidx.constraintlayout.widget.ConstraintLayout>